/**index.wxss**/
@import '../common/houselist.wxss';

page {
  min-height: 100%;
  background: #f2f2f2;
}

.container {
  padding-bottom: 20rpx;
}

.i-hd {
  position: relative;
  padding-bottom: 30rpx;
  background: #fff;
}

.i-hd .banner .item {
  overflow: hidden;
}

.i-hd .banner .item image {
  width: 100%;
  height: 100%;
}

.i-hd .map-wrapper {
  width: 618rpx;
  margin: -35rpx auto 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 70rpx;
  border: 1px solid #ffba00;
  /* border-bottom: none; */
  background: #fff;
  position: relative;
}

.i-hd .map-wrapper .txt {
  font-size: 22rpx;
  color: #999;
}

.i-hd .map-wrapper .map {
  position: absolute;
  height: 70rpx;
  left: 40rpx;
  top: 0;
  font-size: 24rpx;
  color: #666;
}

.i-hd .map-wrapper .map image {
  width: 20rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.i-hd .nav-list {
  padding: 0 0 20rpx;
}

.i-hd .nav-list .nav-item {
  width: 25%;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  font-family: "PingFangSC-Medium";
}

.i-hd .nav-list .nav-item image {
  height: 100rpx;
  width: 100rpx;
}

.i-bd .title {
  padding: 32rpx 0;
  text-align: center;
  background: #f5f5f5;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.no-data {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}

.house-list .au .name, .house-list .au .city{
  margin-bottom: 26rpx;
}

.house-list .price.no-price{
  font-size: 26rpx;
}