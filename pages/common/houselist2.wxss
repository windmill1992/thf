.house-list .item {
  display: block;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.house-list .title {
  width: 100%;
  font-size: 28rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.house-list .pic {
  width: 286rpx;
  height: 196rpx;
  overflow: hidden;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.house-list .pic image {
  width: 100%;
  height: 100%;
}

.house-list .sale, .house-list .city {
  font-size: 26rpx;
  color: #656565;
  line-height: 1.5;
}

.house-list .price {
  font-size: 36rpx;
  color: #fc6e21;
  margin-top: 10rpx;
}

.house-list .price text {
  font-size: 26rpx;
}

.house-list .tags {
  line-height: 1;
  padding: 6rpx 10rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.house-list .tag1 {
  color: #e5814c;
  border: 1px solid #e5814c;
}

.house-list .tag2 {
  color: #3392d2;
  border: 1px solid #3392d2;
}

.house-list .tag3 {
  color: #ce0000;
  border: 1px solid #ce0000;
}
