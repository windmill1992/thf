/* pages/newHouseDetail/newHouseDetail.wxss */
@import '../common/houselist2.wxss';

page {
  height: 100%;
}

.container {
  height: 100%;
  background: #f2f2f2;
  padding-bottom: 100rpx;
  overflow-y: auto;
}

.nhd-hd .swiper-wrapper {
  position: relative;
}

.nhd-hd .swiper {
  height: 440rpx;
  background: #fff;
}

.nhd-hd .swiper image {
  width: 100%;
  height: 100%;
}

.nhd-hd .swiper-wrapper .page {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 32rpx;
}

.nhd-hd .swiper-wrapper .page text {
  color: #ffa200;
}

.nhd-hd .infos {
  background: #fff;
  padding: 30rpx;
  font-size: 32rpx;
}

.nhd-hd .infos .title {
  margin-bottom: 20rpx;
  line-height: 1;
}

.nhd-hd .infos .info {
  margin-bottom: 20rpx;
}

.nhd-hd .infos .info .txt {
  padding: 0 30rpx;
  border-right: 1px solid #f3f3f3;
  line-height: 1;
}

.nhd-hd .infos .info .txt:first-child {
  padding-left: 0;
}

.nhd-hd .infos .info .txt:last-child {
  color: #fc6e21;
  border-right: none;
}

.nhd-hd .infos .date {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.nhd-hd .infos .price .txt1 {
  font-size: 36rpx;
  color: #fc6e21;
}

.nhd-hd .infos .price .unit {
  color: #fc6e21;
  font-size: 24rpx;
}

.nhd-hd .infos .price .cny {
  color: #999;
  font-size: 24rpx;
  padding-left: 30rpx;
}

.nhd-bd .navs {
  background: #fff;
  margin-top: 20rpx;
}

.nhd-bd .navs .nav-item {
  padding: 26rpx 0;
  width: 33.33%;
  border-right: 1px solid #f3f3f3;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
}

.nhd-bd .navs .nav-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.nhd-bd .navs .nav-item .txt1 {
  color: #fc6e21;
}

.nhd-bd .navs .nav-item .txt2 {
  color: #3392d2;
}

.nhd-bd .info-box {
  background: #fff;
  margin-top: 20rpx;
}

.nhd-bd .info-box .title {
  padding: 20rpx;
  border-bottom: 1px solid #f3f3f3;
  font-size: 30rpx;
  color: #000;
}

.nhd-bd .info-box .title .more {
  color: #999;
  font-size: 24rpx;
}

.nhd-bd .info-box .title .more::after {
  width: 12rpx;
  height: 12rpx;
}

.nhd-bd .info-box .info-list {
  padding: 20rpx 0;
}

.nhd-bd .info-box .li {
  padding: 16rpx;
}

.nhd-bd .info-box .li .left {
  color: #666;
  font-size: 26rpx;
}

.nhd-bd .info-box .li .right {
  color: #000;
  font-size: 28rpx;
  word-break: break-all;
}

.nhd-bd .type-wrapper {
  padding: 0 20rpx;
}

.nhd-bd .house-type-list {
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  overflow-x: auto;
  flex-wrap: nowrap;
}

.nhd-bd .house-type-list::-webkit-scrollbar {
  display: none;
}

.nhd-bd .house-type-list .item {
  width: 240rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.nhd-bd .house-type-list .pic {
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
  position: relative;
}

.nhd-bd .house-type-list .pic image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.nhd-bd .house-type-list .pic .tag {
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  background: #fc6e21;
  padding: 0 10rpx;
  line-height: 1.2;
}

.nhd-bd .house-type-list .pic .tag.no{
	background: #ccc;
}

.nhd-bd .house-type-list .name {
  color: #000;
  margin-top: 10rpx;
}

.nhd-bd .house-type-list .size {
  color: #999;
  margin-top: 5rpx;
}

.nhd-bd .house-type-list .price {
  font-size: 26rpx;
  color: #fe0000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nhd-bd .img-list {
  padding: 20rpx;
  background: #fff;
}

.nhd-bd .img-list .img-item {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.nhd-bd .wrapper .titles {
  color: #000;
  font-size: 36rpx;
  text-align: center;
  padding: 30rpx 0;
}

.nhd-ft {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
}

.nhd-ft .btn {
  width: 50%;
}

.nhd-ft .btn.tel {
  background: #ffa200;
  color: #fff;
  border-top: 1px solid #ffa200;
}

.nhd-ft .btn.wx {
  background: #fff;
  color: #ffa200;
  border-top: 1px solid #ccc;
}

.no-data {
  color: #999;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}
