/* pages/newHouseInfo/newHouseInfo.wxss */

.line {
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}

.info-list {
  padding: 20rpx 0;
}

.info-list .li {
  padding: 20rpx;
  font-size: 26rpx;
}

.info-list .li .title {
  color: #656565;
  white-space: nowrap;
}

.info-list .li .txt {
  color: #000;
  margin-left: 10rpx;
  word-break: break-all;
}

.sch-list .item {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.sch-list .item .pic image {
  width: 100%;
  height: 200rpx;
}

.sch-list .item .name {
  font-size: 30rpx;
  color: #000;
  margin: 20rpx 0;
}

.sch-list .item .rank {
  font-size: 36rpx;
  color: #fc6e21;
  margin-bottom: 10rpx;
}

.sch-list .item .rank text {
  font-size: 24rpx;
  color: #333;
  margin-left: 30rpx;
}

.sch-list .item .sch {
  font-size: 30rpx;
  color: #000;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.sch-list .item .star {
  width: 166rpx;
  height: 24rpx;
  margin-left: 20rpx;
  position: relative;
}

.sch-list .item .bg {
  width: 100%;
  height: 24rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.sch-list .item .bg1 {
  background: #ff5f00;
}

.sch-list .item .bg2 {
  background: #ccc;
}

.sch-list .item .img {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 11;
}

.sch-list .item .info {
  margin-bottom: 8rpx;
  font-size: 26rpx;
  color: #656565;
  word-break: break-all;
}

.sch-list .item .left {
  width: 190rpx;
}

.sch-list .item .dis {
  font-size: 26rpx;
  color: #777;
  margin-top: 20rpx;
}

.sch-list .item .dis image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
