/* pages/houseDetail/houseDetail.wxss */
@import '../common/houselist.wxss';

page {
  height: 100%;
}

.container {
  height: 100%;
	background: #f2f2f2;
  padding-bottom: 100rpx;
  overflow-y: auto;
}

.bg1 {
  background: #eed981;
}

.bg2 {
  background: #a9ce81;
}

.bg3 {
  background: #72c8e5;
}

.down::after{
	content: '';
	display: inline-block;
	width: 12rpx;
	height: 12rpx;
	border-right: 1px solid #656565;
	border-bottom: 1px solid #656565;
	transform: rotate(45deg) translate3d(0, -2rpx, 0);
	margin-left: 10rpx;
}

.up::after{
	content: '';
	display: inline-block;
	width: 12rpx;
	height: 12rpx;
	border-left: 1px solid #656565;
	border-top: 1px solid #656565;
	transform: rotate(45deg) translate3d(0, 4rpx, 0);
	margin-left: 10rpx;
}

.bhd-hd .swiper-wrapper {
  position: relative;
}

.bhd-hd .swiper {
  height: 440rpx;
  background: #fff;
}

.bhd-hd .swiper image {
  width: 100%;
  height: 100%;
}

.bhd-hd .swiper-wrapper .page {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 32rpx;
}

.bhd-hd .infos {
  background: #fff;
  padding-bottom: 20rpx;
}

.bhd-hd .infos .info {
  padding: 30rpx 0 10rpx;
}

.bhd-hd .infos .txt {
  color: #000;
  font-size: 32rpx;
  padding: 0 30rpx;
  height: 40rpx;
  line-height: 36rpx;
  border-right: 1px solid #dcdcdc;
}

.bhd-hd .infos .txt:last-child {
  border-right: none;
}

.bhd-hd .infos .price {
  text-align: center;
  padding: 0 0 10rpx;
	white-space: nowrap
}

.bhd-hd .infos .txt1 {
  font-size: 48rpx;
  color: #000;
}

.bhd-hd .infos .unit {
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #f14114;
  font-weight: 400;
}

.bhd-hd .infos .cny {
  font-size: 26rpx;
  color: #999;
  padding-left: 20rpx;
  font-weight: 400;
}

.bhd-hd .his-price {
  margin-top: 20rpx;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  border-top: 1px solid #ebebeb;
}

.bhd-hd .his-price::after {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  transform: rotate(45deg) translate3d(0, -5rpx, 0);
  margin-left: 10rpx;
}

.bhd-hd .his-wrapper {
  background: #f2f2f2;
}

.bhd-hd .his-wrapper .item {
  width: 33.33%;
  padding: 20rpx 0;
  text-align: center;
  overflow: hidden;
}

.bhd-hd .his-wrapper .th {
  font-size: 24rpx;
  color: #656565;
  padding: 10rpx 0;
}

.bhd-hd .his-wrapper .td {
  font-size: 28rpx;
  color: #656565;
  height: 60rpx;
  line-height: 60rpx;
}

.bhd-hd .his-wrapper .td.first {
  font-size: 30rpx;
  color: #000;
  padding: 30rpx 0;
}

.bhd-hd .his-wrapper .td .icon {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 44rpx;
  text-align: center;
  position: relative;
}

.bhd-hd .his-wrapper .td image {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  vertical-align: top;
}

.bhd-hd .his-wrapper .td.first image {
  width: 30rpx;
  height: 30rpx;
}

.bhd-hd .his-wrapper .td:not(:last-child) .icon::after {
  content: '';
  display: inline-block;
  width: 1px;
  height: 65rpx;
  background: #dcdcdc;
  position: absolute;
  left: 50%;
  bottom: -65rpx;
  z-index: 1;
}

.bhd-bd {
  margin-top: 20rpx;
}

.bhd-bd .navs {
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
}

.bhd-bd .navs .nav-item {
  width: 50%;
  color: #656565;
  font-size: 28rpx;
  text-align: center;
}

.bhd-bd .navs .txt {
  display: inline-block;
  height: 80rpx;
  line-height: 78rpx;
  border-bottom: 2rpx solid transparent;
  box-sizing: border-box;
}

.bhd-bd .navs .nav-item.on .txt {
  border-bottom-color: #f14114;
}

.bhd-bd .info-box {
  background: #fff;
  padding: 0 30rpx 20rpx;
	position: absolute;
	top: 0;
	z-index: -1
}

.bhd-bd .info-box.show{
	position: relative;
	z-index: 0;
}

.bhd-bd .info-box .li {
  padding: 20rpx 0;
  font-size: 26rpx;
}

.bhd-bd .info-box .li .left {
  color: #656565;
  min-width: 160rpx;
  text-align: justify;
}

.bhd-bd .info-box .li .left.bd{
  border-bottom: 1px solid #f3f3f3;
  color: #000;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.bhd-bd .info-box .li .right {
  color: #000;
  word-break: break-all;
}

.bhd-bd .info-box .li .right.bd{
  color: #656565;
}

.bhd-bd .info-box .li .right text {
  font-size: 24rpx;
  color: #7f7f7f;
  padding-left: 10rpx;
}

.bhd-bd .detailinfo{
	padding: 0 10rpx 20rpx;
}

.bhd-bd .detailinfo .li{
	padding: 20rpx;
}

.bhd-bd .detailinfo .desc{
	padding: 20rpx;
	background: #f2f2f2;
	font-size: 26rpx;
	position: relative;
	overflow: hidden;
}

.bhd-bd .detailinfo .desc .mask{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	background-image: linear-gradient(to top, rgba(255, 255, 255, .7), rgba(255, 255, 255, .3));
}

.bhd-bd .detailinfo .top{
	color: #656565;
	margin-bottom: 20rpx;
}

.bhd-bd .detailinfo .con{
	color: #000;
	line-height: 2;
}

.bhd-bd .map-pic {
  margin-top: 30rpx;
}

.bhd-bd .map-pic .map{
	width: 100%;
	height: 360rpx;
}

.bhd-bd .map-pic image {
  width: 100%;
  height: 360rpx;
}

.bhd-bd .wrapper {
  margin-top: 20rpx;
  background: #fff;
}

.bhd-bd .title {
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.bhd-bd .title .line {
  width: 4rpx;
  height: 28rpx;
  background: #f14114;
  margin-right: 16rpx;
}

.bhd-bd .title .txt {
  font-size: 32rpx;
  color: #1e1e1e;
  position: relative;
  top: -2rpx;
}

.bhd-bd .dis-list .item {
  padding: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.bhd-bd .dis-list .item:last-child {
  border-bottom: none;
}

.bhd-bd .dis-list .left {
  margin-right: 30rpx;
}

.bhd-bd .dis-list .left .num {
  color: #fff;
  font-size: 44rpx;
  text-align: center;
  width: 108rpx;
  height: 108rpx;
  line-height: 108rpx;
  border-radius: 100%;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.bhd-bd .dis-list .left .rank {
  font-size: 22rpx;
  color: #333;
}

.bhd-bd .dis-list .right {
  color: #1e1e1e;
}

.bhd-bd .dis-list .right .name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.bhd-bd .dis-list .right .level {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.bhd-bd .dis-list .right .state {
  width: 64rpx;
  height: 36rpx;
  margin-left: 20rpx;
}

.bhd-bd .dis-list .right .pos {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.bhd-bd .dis-list .right .txt2 {
  font-size: 30rpx;
}

.bhd-bd .man-list .item {
  padding: 30rpx;
  border-bottom: 1px solid #dcdcdc;
}

.bhd-bd .man-list .avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 20rpx;
}

.bhd-bd .man-list .avatar image {
  width: 100%;
  height: 100%;
}

.bhd-bd .man-list .nick {
  font-weight: 600;
  font-size: 32rpx;
  color: #000;
}

.bhd-bd .man-list .nick .prof {
  background: #fc6e21;
  color: #000;
  font-size: 24rpx;
  padding: 2rpx 10rpx;
  font-weight: 400;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.bhd-bd .man-list .txt {
  font-size: 26rpx;
  color: #000;
  line-height: 1.5;
}

.bhd-bd .man-list .call {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  border-radius: 100%;
}

.bhd-bd .man-list .call image {
  width: 100%;
  height: 100%;
}

.bhd-bd .linkman .txt2 {
  font-size: 26rpx;
  color: #000;
  padding: 30rpx;
  text-align: center;
}

.bhd-ft {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
}

.bhd-ft .btn {
  width: 50%;
}

.bhd-ft .btn.tel {
  background: #ffa200;
  color: #fff;
  border-top: 1px solid #ffa200;
}

.bhd-ft .btn.wx {
  background: #fff;
  color: #ffa200;
  border-top: 1px solid #ffa200;
}

.no-data{
  color: #999;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.house-list .au .name, .house-list .au .city{
  margin-bottom: 26rpx;
}

.house-list .price.no-price{
  font-size: 26rpx;
}