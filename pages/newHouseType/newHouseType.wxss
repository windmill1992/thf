/* pages/newHouseType/newHouseType.wxss */

.line {
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}

.list .item {
  padding: 10rpx 20rpx;
}

.list .pic {
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.list .pic image {
  width: 100%;
  height: 100%;
}

.list .name {
  color: #000;
  font-size: 26rpx;
  line-height: 1.6;
  margin: 10rpx 0;
}

.list .txt {
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}

.list .price {
  color: #fe0000;
  font-size: 32rpx;
}
