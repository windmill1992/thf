/* pages/agency/agency.wxss */

page {
  min-height: 100%;
  background: #f3f3f3;
}

.a-hd {
  background: #fff;
  font-size: 28rpx;
  color: #666;
  border-top: 1px solid #f3f3f3;
}

.a-hd .sel {
  padding: 20rpx 0;
  text-align: center;
}

.a-hd .down {
  position: relative;
}

.a-hd .down::after {
  display: inline-block;
  content: '';
  width: 14rpx;
  height: 14rpx;
  border-right: 1px solid #666;
  border-bottom: 1px solid #666;
  transform: rotate(45deg) translate3d(0, -6rpx, 0);
  margin-left: 10rpx;
}

.a-bd {
  margin-top: 15rpx;
}

.a-bd .agent-list {
  padding: 0 30rpx;
  background: #fff;
}

.a-bd .agent-list .item {
  padding: 30rpx 0;
  border-bottom: 1px solid #ddd;
}

.a-bd .agent-list .item:last-child {
  border-bottom: none;
}

.a-bd .agent-list .avatar {
  width: 124rpx;
  height: 124rpx;
  overflow: hidden;
  margin-right: 40rpx;
  border-radius: 100%;
}

.a-bd .agent-list .avatar image {
  width: 100%;
  height: 100%;
}

.a-bd .agent-list .name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.a-bd .agent-list .company {
  font-size: 20rpx;
  color: #f9b513;
  margin-top: 10rpx;
}

.a-bd .agent-list .info {
  font-size: 20rpx;
  color: #666;
  margin-top: 12rpx;
}

.a-bd .agent-list .info .lang {
  padding-right: 20rpx;
  border-right: 1px solid #ccc;
}

.a-bd .agent-list .info .num {
  padding-left: 20rpx;
}

.a-bd .agent-list .btn {
  height: 36rpx;
  border-radius: 36rpx;
  background: #ffa200;
  font-size: 20rpx;
  color: #fff;
  padding: 0 20rpx;
}

.no-data {
  margin: 100rpx;
  color: #aaa;
  font-size: 30rpx;
  text-align: center;
}
