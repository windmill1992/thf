/* pages/news/news.wxss */

page {
  min-height: 100%;
  background: #fafafa;
}

.container {
  overflow: auto;
}

.n-hd {
  padding: 0 144rpx;
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #ddd;
}

.n-hd .navs {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #656565;
  position: relative;
}

.n-hd .navs .nav-a.on {
  color: #f14114;
}

.n-hd .online {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 4rpx;
  background: #f14114;
  transition: left 0.4s ease;
}

.n-bd {
  margin-top: 30rpx;
}

.n-bd .banner {
  position: relative;
}

.n-bd .banner .item {
  position: relative;
  overflow: hidden;
}

.n-bd .banner .item image {
  width: 100%;
}

.n-bd .banner .item .title {
  width: 100%;
  font-size: 30rpx;
  color: #fff;
  padding: 16rpx 20rpx;
  line-height: 40rpx;
  word-break: break-all;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
}

.n-bd .banner .dots {
  position: absolute;
  bottom: 0;
  right: 20rpx;
  height: 30rpx;
  padding: 0 10rpx;
}

.n-bd .banner .dots .dot {
  width: 8rpx;
  height: 8rpx;
  background: #a9a9a9;
  border-radius: 100%;
  margin-left: 8rpx;
}

.n-bd .banner .dots .dot.on {
  background: #fff;
}

.news-list {
  margin-top: 20rpx;
  background: #fff;
}

.news-list .item {
  padding: 0 30rpx;
}

.news-list .item.navigator-hover {
  background: rgba(0, 0, 0, 0.05);
}

.news-list .item .wrapper {
  padding: 30rpx 0;
  border-bottom: 1px solid #e2e2e2;
}

.news-list .item:last-child {
  border-bottom: none;
}

.news-list .title {
  font-size: 32rpx;
  color: #1e1e1e;
  line-height: 1.5;
  text-align: justify;
  word-break: break-all;
  margin-bottom: 16rpx;
}

.news-list .info {
  font-size: 24rpx;
  color: #9b9b9b;
}

.news-list .source {
  max-width: 170rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 24rpx;
}

.news-list .source.self {
  color: #ffa200;
}

.news-list .date {
  margin-right: 24rpx;
}

.news-list .num image {
  width: 32rpx;
  height: 32rpx;
}

.news-list .pic {
  width: 192rpx;
  height: 160rpx;
  overflow: hidden;
  margin-left: 20rpx;
}

.news-list .pic image {
  width: 100%;
  height: 100%;
}

.loadmore {
  color: #aaa;
}
