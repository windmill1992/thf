/* pages/agencyDetail/agencyDetail.wxss */

page {
  height: 100%;
  background: #f5f5f5;
}

.container {
  height: 100%;
  overflow-y: auto;
  padding-bottom: 120rpx;
	box-sizing: border-box
}

.ad-hd {
  padding: 50rpx;
  background: #ffa200;
}

.ad-hd .card {
  padding: 48rpx 40rpx;
  background: #fff;
  border-radius: 10rpx;
}

.ad-hd .avatar {
  width: 124rpx;
  height: 124rpx;
  overflow: hidden;
  border-radius: 100%;
  margin-right: 40rpx;
}

.ad-hd .avatar image {
  width: 100%;
  height: 100%;
}

.ad-hd .info {
  margin-bottom: 10rpx;
}

.ad-hd .info .title {
  font-size: 22rpx;
  color: #666;
  width: 120rpx;
}

.ad-hd .info .con {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.ad-hd .other {
  margin: 40rpx 0 0;
}

.ad-hd .other .item {
  text-align: center;
  width: 50%;
}

.ad-hd .other .item:first-child {
  border-right: 1px solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

.ad-hd .other .title {
  font-size: 22rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.ad-hd .other .con {
  font-size: 28rpx;
  color: #fff;
}

.ad-bd .title {
  padding: 28rpx 30rpx;
  color: #333;
  font-size: 28rpx;
}

.ad-bd .area-list {
  background: #fff;
  padding: 32rpx;
}

.ad-bd .area-list .li {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  margin-right: 32rpx;
  margin-bottom: 28rpx;
}

.ad-bd .area-list .li text:first-child {
  padding-right: 20rpx;
}

.ad-bd .intro {
  padding: 30rpx;
  background: #fff;
}

.ad-bd .intro .content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.ad-ft {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.ad-ft .btn {
  background: #ffa200;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
