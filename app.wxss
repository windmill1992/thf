/**app.wxss**/

input, select, textarea, label, form {
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
}

.input-placeholder {
  color: #aaa;
}

page {
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
}

.container {
  min-height: 100%;
  position: relative;
  width: 100%;
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
}

.flex {
  display: flex;
}

.spa {
  justify-content: space-around;
}

.spb {
  justify-content: space-between;
}

.spc {
  justify-content: center;
}

.fend {
  justify-content: flex-end;
}

.fcen {
  align-items: center;
}

.fcol {
  display: flex;
  flex-direction: column;
}

.fwrap{
  flex-wrap: wrap
}

.flex1{
  flex: 1;
}

.fshink0{
  flex-shrink: 0;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clear {
  clear: both;
}

.clearfix::after {
  display: table;
  content: '';
  clear: both;
  height: 0;
  overflow: hidden;
}

.hide {
  display: none!important;
}

.show {
  display: block!important;
}

.back::before, .more::after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  -webkit-transform: rotate(45deg) translateY(-1rpx);
  transform: rotate(45deg) translateY(-1rpx);
}

.more::after {
  border-right: 3rpx solid #999;
  border-top: 3rpx solid #999;
}

.back::before {
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
}

.loadmore{
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #333;
}
.loadmore.no{
  color: #999;
}

.tips {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 1.5;
  padding: 30rpx;
  border-radius: 10rpx;
}
